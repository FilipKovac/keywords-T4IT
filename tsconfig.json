{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./lib",
        "rootDir": "./src",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "paths": {
            "@app/models": ["./src/models/index.ts"],
            "@app/logger": ["./src/logger.ts"],
        },
        "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["test"]
}
